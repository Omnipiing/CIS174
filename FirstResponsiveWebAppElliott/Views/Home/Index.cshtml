@model FirstResponsiveWebAppElliott.Models.AgeFinderModel
@{
	Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
	<meta charset="utf-8"
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>Index</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

	<div class="container-fluid p-5 bg-primary text-white text-center">
	<h1 class="mt-3">User Age Finder</h1>
	</div>

	<form asp-action="Index" method="post" class="form-horizontal">
		<div asp-validation-summary="All"></div>
		<div class="container mt-5">
			<label asp-for="UserName"
				   class="control-label col-sm-3">
				User Name
			</label>
			<input asp-for="UserName"
				   class="form-control col-sm-3" />
			<span asp-validation-for="UserName"
				  class="text-danger col"></span>
		</div>

		<div class="container mt-5">
			<label asp-for="BirthYear"
				   class="control-label col-sm-3">
				DOB
			</label>
			@Html.TextBoxFor(m => m.BirthYear, "{0:yyyy-MM-dd}", new { @class = "form-control col-sm-3", type = "date" })
			<span asp-validation-for="BirthYear"
				  class="text-danger col"></span>
		</div>

		<div class="container mt-5">
			<label class="control-label col-sm-3"> User Name:</label>
			<input value="@ViewBag.UserName" readonly
				   class="control-label col-sm-3" />
		</div>

		<div class="container mt-5">
			<label class="control-label col-sm-3"> Age:</label>
			<input value="@ViewBag.Age.ToString("N0")" readonly
				   class="control-label col-sm-3" />
		</div>

		<div class="container mt-5">
			<button type="submit"
					class="btn btn-primary">
				Calculate
			</button>
			<a asp-action="Index"
			   class="btn btn-outline-secondary">Clear</a>
		</div>
	</form>

</body>
</html>